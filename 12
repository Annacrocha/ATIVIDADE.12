	#include <stdio.h>
	#include <stdlib.h>
	#include <locale.h>
	
	
	void cadastro_notas() {
		char nome_Aluno[5][50];
		float nota[5][4];
		int i,j;
		int quantidade = 5;
		char resultado[50];
		
		system("cls");
		printf("Cadastro de Notas/Alunos\n");
		for(i = 0; i < quantidade; i++){
		printf("Digite o nome do(a) aluno(a): \n ");
		scanf("%s", &nome_Aluno[i]);
		for (j = 0; j < 4; j++){
			printf("Digite a %d nota: \n", j);
			scanf("%f", &nota[i][j]); 	
		for(i = 0; i < quantidade; i++) {
        float total_soma = 0;
        for (j = 0; j < 4; j++) {
            total_soma += nota[i][j];
        }
        float media_notas = total_soma / 4;
        printf("Total das notas do(a) aluno(a) %s: \n", total_soma);
        printf("Média aritmética do(a) aluno(a) %s: \n", media_notas);
		}
			
	}
	
		int main(void) {
			cadastro_notas();
		}
	return 0;
	}
