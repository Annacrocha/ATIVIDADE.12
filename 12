	#include <stdio.h>
	#include <stdlib.h>
	#include <locale.h>
	
	
	void cadastro_notas() {
		char nome_Aluno[5][50];
		float nota[5];
		int i = 0;
		int quantidade = 5;
		char resultado[50];
		
		system("cls");
		printf("Cadastro de Notas/Alunos\n");
		for(i = 0; i < quantidade; i++){
		printf("Digite o nome do(a) aluno(a): \n ");
		scanf("%s", &nome_Aluno);
		int j = 0;
		for (j = 0; j < 4; j++){
			printf("Digite a %d nota: \n", j);
			scanf("%f", &nota[j]); 	
		}
		int total_soma = 0;
		total_soma += nota[i];
		printf("Total de notas: %i \n", total_soma);
		float media_notas = total_soma/4;
		printf("Meia aritmetica: %f \n", media_notas);
	}
	}
	
		int main(void){
			cadastro_notas();
	return 0;
	}
